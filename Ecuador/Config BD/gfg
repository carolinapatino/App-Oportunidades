If (atrasGbl <> true;
Concurrent(
// Deshabilita la opción de limpiar los campos, y muestra el loader
UpdateContext({resetCampos:false; cargandoLoc: true});
Set(menuVisible; false)
);;
// Establece el orden por defecto de la tabla
UpdateContext({ordenLoc:true; ordernarPorLoc:"Fecha Ejecución"});;
